#!/usr/bin/env ruby

require 'bundler'

module Mycommands

  DEBUG = ARGV.include? '-d'
  TEST = ARGV.include? '-t'

  Bundler.require(:default)

  action = :print_version if ARGV.include?('-v')

  action = :sort_yaml_files if ARGV.include?('-s')

  action ||= :run

  Factory::get(:Application).send(action)
end